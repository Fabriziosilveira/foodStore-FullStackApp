generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}

model Products {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float

  @@map("produts")
}

model Orders {
  id String @id @default(uuid())

  @@map("orders")
}
